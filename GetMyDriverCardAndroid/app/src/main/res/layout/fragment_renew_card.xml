<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".views.step2.RenewCardFragment">

    <TextView
        android:id="@+id/tv_identity_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="10dp"
        android:paddingTop="10sp"
        android:text="@string/identity_number"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_identity_number"
        android:layout_width="175sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_identity_number"
        android:layout_centerHorizontal="true"
        android:inputType="phone"/>

    <TextView
        android:id="@+id/tv_date_of_expire"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="10dp"
        android:layout_below="@id/et_identity_number"
        android:paddingTop="10sp"
        android:text="@string/date_of_expire"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_pick_date"
        android:layout_width="175sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="@string/pick_date"
        android:layout_below="@id/tv_date_of_expire"
        android:background="@drawable/custom_button"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_chosen_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_pick_date"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/btn_next"
        android:layout_marginTop="30sp"
        android:layout_width="175sp"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:background="@drawable/custom_button"
        android:layout_below="@+id/btn_pick_date"
        android:layout_centerHorizontal="true" />

</RelativeLayout>