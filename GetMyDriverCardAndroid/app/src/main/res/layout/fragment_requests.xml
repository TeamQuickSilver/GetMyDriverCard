<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.requests.RequestsFragment">

    <TextView
        android:id="@+id/tv_date_of_submission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/date_of_submission"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/tv_application_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/application_status"
        android:textColor="@color/colorAccent"
        android:layout_toEndOf="@+id/tv_date_of_submission" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_applications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_date_of_submission" />

</RelativeLayout>